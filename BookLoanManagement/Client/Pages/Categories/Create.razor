@page "/categories/create/"

@inject HttpClient _client
@inject NavigationManager _navManager


<h3 class="card-title">Create New Category</h3>
<hr />
<br />

<FormComponent ButtonText="Create Category" OnValidSubmit="@CreateCategory" category="category" />


@code {
    Category category = new Category();


    protected async override Task OnInitializedAsync()
    {

    }

    private async Task CreateCategory()
    {
        // Pass all related data to Api to create the category object
        await _client.PostAsJsonAsync(Endpoints.CategoriesEndpoint, category);
        // return to the book list page
        _navManager.NavigateTo("/categories/");
    }
}